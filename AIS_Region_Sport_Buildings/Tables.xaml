<Window x:Class="AIS_Region_Sport_Buildings.Tables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_Region_Sport_Buildings"
        mc:Ignorable="d"
        Title="Таблицы" Height="743.928" Width="1100" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="438*"/>
            <ColumnDefinition Width="411*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Grid.ColumnSpan="3" Margin="0,0,-0.4,0.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="698*"/>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="78*"/>
            </Grid.ColumnDefinitions>
            <TabControl Grid.Row="0"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="5,5,4.6,5.4" Grid.ColumnSpan="3">
                <TabItem Header="Организации" FontSize="14" Style="{StaticResource PrimaryTabItem}">
                    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Первый GroupBox -->
                            <RowDefinition Height="Auto"/>
                            <!-- Второй GroupBox -->
                            <RowDefinition Height="Auto"/>
                            <!-- Кнопки -->
                            <RowDefinition Height="*"/>
                            <!-- Запасное пространство -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Первый GroupBox с данными -->
                        <GroupBox Grid.Row="0" Grid.Column="0" Header="Основные данные" Margin="5" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6">
                            <StackPanel Margin="10">
                                <!-- Название организации (на всю ширину) -->
                                <StackPanel Margin="0,5">
                                    <Label Content="Название организации" FontSize="16" Foreground="#FF7B16B6"/>
                                    <TextBox Style="{StaticResource PrimaryTB}" Name="OrgTitleTB" />
                                </StackPanel>

                                <!-- 4 TextBox в 2 колонки -->
                                <Grid Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Левый столбец -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5">
                                        <Label Content="Номер" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="OrgNumberTB"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5">
                                        <Label Content="Телефон" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="OrgPhoneTB"/>
                                    </StackPanel>

                                    <!-- Правый столбец -->
                                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,5">
                                        <Label Content="Краткое название" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="OrgShortTB"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,5">
                                        <Label Content="Эл. почта" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="OrgEmailTB"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Второй GroupBox с адресом -->
                        <GroupBox Grid.Row="1" Grid.Column="0" Header="Адресные данные" Margin="5" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6">
                            <StackPanel Margin="10">
                                <!-- ComboBox на всю ширину -->
                                <StackPanel Margin="0,5">
                                    <Label Content="Тип населенного пункта" FontSize="16" Foreground="#FF7B16B6"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <!-- ComboBox занимает всё доступное пространство -->
                                            <ColumnDefinition Width="10"/>
                                            <!-- Отступ -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Кнопка по размеру контента -->
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0" Style="{StaticResource PrimaryCB}" Name="LocTypeCB"/>
                                        <Button Name="OpenRefBookBtn" Grid.Column="2" Content="+" Padding="10,5" FontSize="18" FontWeight="ExtraBold" ToolTip="Добавить новый тип"  Style="{StaticResource PrimaryBtn}" Margin="0.2,0,0.4,-0.4" Click="OpenRefBookBtn_Click"/>
                                    </Grid>
                                </StackPanel>

                                <!-- 4 TextBox в 2 колонки -->
                                <Grid Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Левый столбец -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5">
                                        <Label Content="Населенный пункт" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="LocNameTB"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5">
                                        <Label Content="Номер здания" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="BldNumberTB"/>
                                    </StackPanel>

                                    <!-- Правый столбец -->
                                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,5">
                                        <Label Content="Улица" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="LocStreetTB"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,5">
                                        <Label Content="Номер входа" FontSize="16" Foreground="#FF7B16B6"/>
                                        <TextBox Style="{StaticResource PrimaryTB}" Name="EntrNumberTB"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Кнопки под GroupBox -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                            <UniformGrid Columns="2" Margin="0,10">
                                <Button Content="Добавить"
                                Name="AddOrgBtn"
                                Style="{StaticResource PrimaryBtn}"
                                Margin="5"
                                Padding="15,7" 
                                FontSize="14" Click="AddOrgBtn_Click"/>
                                <Button Content="Изменить"
                                Name="UpdateOrgBtn"
                                Style="{StaticResource SuccessBtn}"
                                Margin="5"
                                Padding="15,7" 
                                FontSize="14" Click="UpdateOrgBtn_Click"/>
                                <Button Content="Очистить"
                                Name="ClearTextFildsBtn"
                                Style="{StaticResource WarningBtn}"
                                Margin="5"
                                Padding="15,7" 
                                FontSize="14" Click="ClearTextFieldsBtn_Click" />
                                <Button Content="Удалить"
                                Name="DeleteOrgBtn"
                                Style="{StaticResource DangerBtn}"
                                Margin="5"
                                Padding="15,7" 
                                FontSize="14" Click="DeleteOrgBtn_Click"/>
                            </UniformGrid>
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="0" Grid.Column="1" Grid.RowSpan="4"
                  Margin="5" 
                  Name="OrganizationDG" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Style="{StaticResource PrimaryDataGrid}" SelectionChanged="OrganizationDG_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№" 
                            Binding="{Binding Number}" 
                            Width="80"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                                <DataGridTextColumn Header="Название" 
                            Binding="{Binding Name}" 
                            Width="200"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                                <DataGridTextColumn Header="Кратко" 
                            Binding="{Binding ShortName}" 
                            Width="80"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                                <DataGridTextColumn Header="Телефон" 
                            Binding="{Binding Phone}" 
                            Width="120"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                                <DataGridTextColumn Header="Эл. почта" 
                            Binding="{Binding Email}" 
                            Width="180"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                                <DataGridTextColumn Header="Адрес" 
                            Binding="{Binding FullAddress}" 
                            Width="*"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Спортивные сооружения" FontSize="14" Style="{StaticResource PrimaryTabItem}">
                    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Column="0" Header="Данные" Margin="5" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6">
                            <StackPanel Margin="5">
                                <Label Content="Тип спортивного сооружения" Foreground="#FF7B16B6" FontSize="14"></Label>
                                <TextBox FontSize="14" 
                                VerticalAlignment="Top"
                                VerticalContentAlignment="Center"
                                Padding="5,8"
                                Margin="10, 0"
                                Name="SpBldTB"
                                MinHeight="30" FontFamily="Verdana"/>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button Content="Добавить"
                                Name="AddSpBldTypeBtn"
                                Style="{StaticResource PrimaryBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" />
                                    <Button Content="Изменить"
                                Name="UpdateSpBldTypeBtn"
                                Style="{StaticResource SuccessBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" />
                                    <Button Content="Удалить"
                                Name="DeleteSpBldTypeBtn"
                                Style="{StaticResource DangerBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <DataGrid Grid.Column="1" 
                      Margin="5,18,5,5" 
                      Name="SpBldTypeDG" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Style="{StaticResource PrimaryDataGrid}" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название типа" 
                            Binding="{Binding Title}" 
                            Width="*"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Адреса нас. пунктов" FontSize="14" Style="{StaticResource PrimaryTabItem}">
                    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="235*"/>
                            <ColumnDefinition Width="84*"/>
                            <ColumnDefinition Width="319*"/>
                        </Grid.ColumnDefinitions>

                        <GroupBox Grid.Column="0" Header="Данные" Margin="5,5,5.2,5.2" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6" Grid.ColumnSpan="2">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <!-- Отступ между колонками -->
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Левый столбец с TextBox -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <Label Content="Название нас. пункта" Foreground="#FF7B16B6" FontSize="14"/>
                                    <TextBox  
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource PrimaryTB}"
                                     Name="LocalityNameTB"
                                    />
                                    <Label Content="Номер здания" Foreground="#FF7B16B6" FontSize="14"/>
                                    <TextBox 
                                     Name="BuildNumberTB"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource PrimaryTB}"
                                    />
                                </StackPanel>

                                <!-- Правый столбец с TextBox -->
                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <Label Content="Название улицы" Foreground="#FF7B16B6" FontSize="14"/>
                                    <TextBox
                                     Name="StreetNameTB"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource PrimaryTB}"
                                    />

                                    <Label Content="Номер входа" Foreground="#FF7B16B6" FontSize="14"/>
                                    <TextBox
                                     Name="EntranceNumberTB"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource PrimaryTB}"
                                    />
                                </StackPanel>

                                <!-- ComboBox на всю ширину -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,10">
                                    <Label Content="Тип нас. пункта" Foreground="#FF7B16B6" FontSize="14"/>
                                    <ComboBox 
                                      Name="LocalityTypeCB"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Center"
                                      Style="{StaticResource PrimaryCB}"
                                    />
                                </StackPanel>

                                <!-- Кнопки по центру -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                    HorizontalAlignment="Center" 
                                    Orientation="Horizontal"
                                            Margin="0 30 0 0"
                                >
                                    <Button Content="Добавить"
                                    Name="AddAddressBtn"
                                    Style="{StaticResource PrimaryBtn}"
                                    Margin="10,0"
                                    Padding="20,7" 
                                    FontSize="14" 
                                    />
                                    <Button Content="Изменить"
                                    Name="UpdateAddresseBtn"
                                    Style="{StaticResource SuccessBtn}"
                                    Margin="10,0"
                                    Padding="20,7" 
                                    FontSize="14" 
                                    />
                                    <Button Content="Удалить"
                                    Name="DeleteAddressBtn"
                                    Style="{StaticResource DangerBtn}"
                                    Margin="10,0"
                                    Padding="20,7" 
                                    FontSize="14" 
                                    />
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <DataGrid Grid.Column="2" 
                          Margin="4.8,18,5.4,5.2" 
                          Name="AddressesDG" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Style="{StaticResource PrimaryDataGrid}" 
                          >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Адреса" 
                                    Binding="{Binding Title}" 
                                    Width="*"
                                    HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                                    ElementStyle="{StaticResource PrimaryDataGridCellText}"
                                    CellStyle="{StaticResource PrimaryDataGridCell}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
