<Window x:Class="AIS_Region_Sport_Buildings.ReferenceBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIS_Region_Sport_Buildings"
        mc:Ignorable="d"
        Title="Справочники" Height="350" Width="660">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="698*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="78*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Margin="5,5,4.6,5.4" Grid.ColumnSpan="3">

            <!-- Содержимое табов остается таким же -->
            <TabItem Header="Типы населённых пунктов" FontSize="14" Style="{StaticResource PrimaryTabItem}">
                <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Данные" Margin="5" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6">
                        <StackPanel Margin="5">
                            <Label Content="Тип населённого пункта" Foreground="#FF7B16B6" FontSize="14"></Label>
                            <TextBox 
                                VerticalAlignment="Top"
                                VerticalContentAlignment="Center"
                                Name="LocTypeTB"
                                Style="{StaticResource PrimaryTB}"/>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button Content="Добавить"
                                Name="AddLocTypeBtn"
                                Style="{StaticResource PrimaryBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="AddLocTypeBtn_Click"/>
                                <Button Content="Изменить"
                                Name="UpdateLocTypeBtn"
                                Style="{StaticResource SuccessBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="UpdateLocTypeBtn_Click"/>
                                <Button Content="Удалить"
                                Name="DeleteLocTypeBtn"
                                Style="{StaticResource DangerBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="DeleteLocTypeBtn_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <DataGrid Grid.Column="1" 
                      Margin="5,18,5,5" 
                      Name="LocalityTypeDG" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Style="{StaticResource PrimaryDataGrid}" SelectionChanged="LocalityTypeDG_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название типа" 
                            Binding="{Binding Title}" 
                            Width="*"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Типы спортивных сооружений" FontSize="14" Style="{StaticResource PrimaryTabItem}">
                <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Данные" Margin="5" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6">
                        <StackPanel Margin="5">
                            <Label Content="Тип спортивного сооружения" Foreground="#FF7B16B6" FontSize="14"></Label>
                            <TextBox 
                                VerticalAlignment="Top"
                                VerticalContentAlignment="Center"
                                Name="SpBldTB"
                                Style="{StaticResource PrimaryTB}"/>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button Content="Добавить"
                                Name="AddSpBldTypeBtn"
                                Style="{StaticResource PrimaryBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="AddSpBldTypeBtn_Click"/>
                                <Button Content="Изменить"
                                Name="UpdateSpBldTypeBtn"
                                Style="{StaticResource SuccessBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="UpdateSpBldTypeBtn_Click"/>
                                <Button Content="Удалить"
                                Name="DeleteSpBldTypeBtn"
                                Style="{StaticResource DangerBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="DeleteSpBldTypeBtn_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <DataGrid Grid.Column="1" 
                      Margin="5,18,5,5" 
                      Name="SpBldTypeDG" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Style="{StaticResource PrimaryDataGrid}" SelectionChanged="SpBldTypeDG_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название типа" 
                            Binding="{Binding Title}" 
                            Width="*"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Типы проводимых мероприятий" FontSize="14" Style="{StaticResource PrimaryTabItem}">
                <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="235*"></ColumnDefinition>
                        <ColumnDefinition Width="84*"/>
                        <ColumnDefinition Width="319*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Данные" Margin="5,5,5.2,5.2" FontSize="16" Foreground="#FF7B16B6" BorderBrush="#FF7B16B6" Grid.ColumnSpan="2">
                        <StackPanel Margin="5">
                            <Label Content="Тип проводимого мероприятия" Foreground="#FF7B16B6" FontSize="14"></Label>
                            <TextBox 
                                VerticalAlignment="Top"
                                VerticalContentAlignment="Center"
                                Name="EvtTypeTB"
                                Style="{StaticResource PrimaryTB}"/>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button Content="Добавить"
                                Name="AddEvtTypeBtn"
                                Style="{StaticResource PrimaryBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="AddEvtTypeBtn_Click"/>
                                <Button Content="Изменить"
                                Name="UpdateEvtTypeBtn"
                                Style="{StaticResource SuccessBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="UpdateEvtTypeBtn_Click"/>
                                <Button Content="Удалить"
                                Name="DeleteEvtTypeBtn"
                                Style="{StaticResource DangerBtn}"
                                Margin="10, 20"
                                Padding="7" 
                                FontSize="14" Click="DeleteEvtTypeBtn_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <DataGrid Grid.Column="2" 
                      Margin="4.8,18,5.4,5.2" 
                      Name="EvtTypeDG" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Style="{StaticResource PrimaryDataGrid}" SelectionChanged="EvtTypeDG_SelectionChanged" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название типа" 
                            Binding="{Binding Title}" 
                            Width="*"
                            HeaderStyle="{StaticResource PrimaryDataGridColumnHeader}"
                            ElementStyle="{StaticResource PrimaryDataGridCellText}"
                            CellStyle="{StaticResource PrimaryDataGridCell}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
